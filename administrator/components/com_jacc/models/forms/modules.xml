<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>

		<field
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"/>							
							
		<field
			name="name"
			type="text"
			id="module"
			label="Module"
			description="module_Desc"
			validate="module"
			required="true"			
			class="inputbox validate-module"
			size="40"/>						
						
		<field
			name="version"
			type="text"
			required="true"		
			label="version"
			description="version_Desc"
			class="inputbox"
			size="10"/>												
						
		<field
			name="description"
			type="textarea"
			label="Description"
			description="Description_Desc"
			class="inputbox"
			cols="40"
			rows="3"/>
							
		<field
			id="created"
			name="created"
			type="calendar"
			label="Created"
			description="Created_Desc"
			class="inputbox"
			size="16"
			format="%Y-%m-%d %H-%M-%S"
			/>					
		
		<field
			name="use"
			type="radio"
			class="inputbox"
			default="1"
			size="1"
			label="Mode"
			description="JField_ModUse_Desc">
			<option
				value="1">
				JOption_Create</option>
			<option
				value="2">
				JOption_ModLiving</option>
		</field>		
						
		<field
			name="published"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JField_Published_Label"
			description="JField_Published_Desc">
			<option
				value="1">
				JOption_Published</option>
			<option
				value="0">
				JOption_UnPublished</option>
			<option
				value="-1">
				JOption_Archived</option>
			<option
				value="-2">
				JOption_Trashed</option>
		</field>								
	</fields>	
		
	<fields name="params">
		<fieldset
			name="basic">		
				
			<field
				name="export"
				type="text"						
				label="Export Folder"
				description="PARAMS_Export_Desc"
				class="inputbox"
				size="20"/>	
		</fieldset>
	</fields>
		
</form>	