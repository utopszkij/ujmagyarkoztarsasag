<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		
		<field
			name="id"
			type="hidden"
			default="0"
			required="true"
			readonly="true"/>							
							
		<field
			name="name"
			type="text"
			id="component"
			label="Component"
			description="name_Desc"
			validate="component"
			required="true"			
			class="inputbox validate-component"
			labelclass="control-label"
			size="40"/>						
						
		<field
			name="version"
			type="text"
			required="true"		
			label="version"
			description="version_Desc"
			class="inputbox"
			 labelclass="control-label"
			size="10"/>						
						
		<field
			name="tables"
			type="tablelist"
			required="true"		
			label="Tables"
			multiple="true"
			description="tables_Desc"
			class="inputbox validate-tables"
			size="10"/>						
						
		<field
			name="description"
			type="textarea"
			label="Description"			
			labelclass="control-label"
			description="Description_Desc"
			class="inputbox"
			cols="40"
			rows="3"/>
							
		<field
			id="created"
			name="created"
			type="calendar"
			label="Created"
			labelclass="control-label"
			description="Created_Desc"
			class="inputbox"
			size="16"
			format="%Y-%m-%d %H-%M-%S"
			/>					
		
		<field
			name="use"
			type="radio"
			class="inputbox"
			labelclass="control-label"
			default="1"
			size="1"
			label="Mode"
			description="JField_Use_Desc">
			<option
				value="1">
				JOption_Create</option>
			<option
				value="2">
				JOption_Living</option>
		</field>
						
		<field
			name="published"
			type="list"
			class="inputbox"
			labelclass="control-label"
			default="1"
			size="1"
			label="JField_Published_Label"
			description="JField_Published_Desc">
			<option
				value="1">
				JOption_Published</option>
			<option
				value="0">
				JOption_UnPublished</option>
			<option
				value="-1">
				JOption_Archived</option>
			<option
				value="-2">
				JOption_Trashed</option>
		</field>
		</fieldset>
      					
		<fields name="params">
		<fieldset
			name="views">
			<field
				name="views"
				type="inputlist"
				default="" />
		
		</fieldset>					
		<fieldset
			name="basic">
			<field
				name="uses_categories"
				type="list"
				default=""
				label="Params_Categories_Label"
				description="PARAMS_CATEGORIES_DESC">
				<option
					value="0">No</option>
				<option
					value="1">Yes</option>
			</field>				
			<field
				name="export"
				type="text"						
				label="Export Folder"
				description="PARAMS_Export_Desc"
				class="inputbox"
				size="20" />					
		</fieldset>
	</fields>
	
</form>	